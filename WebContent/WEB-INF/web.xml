<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
	id="WebApp_ID" version="3.1">
	<display-name>Battleship</display-name>

	<welcome-file-list>
		<welcome-file>index.jsp</welcome-file>
	</welcome-file-list>

	<listener>
		<listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
	</listener>

	<servlet>
		<servlet-name>battleship</servlet-name>
		<servlet-class>org.battleship.controller.BattleshipServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>battleship</servlet-name>
		<url-pattern>/battleship</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>sudoku</servlet-name>
		<servlet-class>org.battleship.controller.SudokuServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>sudoku</servlet-name>
		<url-pattern>/sudoku</url-pattern>
	</servlet-mapping>

</web-app>